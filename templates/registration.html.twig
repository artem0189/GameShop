{% extends "base-auth.html.twig" %}

{% block title %}
	Sign Up
{% endblock %}

{% block form %}
	<div class="form-header">
		<i class="fas fa-unlock color-white"></i>
		<div class="form-header__content">Sign Up</div>
	</div>
	<p class="error">{{ error }}</p>
	<form class="form-content" action="vendor/signup.php" method="POST">
		<input type="text" name="username" placeholder="Login">
		<input type="text" name="email" placeholder="Email">
		<input type="text" name="email_confirm" placeholder="Confirm Email">
		<button type="submit" class="form-submit">Sign Up</button>
	</form>
	<div class="form__registration">
		<a href="login.php">Sign In</a>
	</div>
{% endblock %}